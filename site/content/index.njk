              Shorten course{% signalFlag 's', options %}
            </div>
            <div style="width: 24%">
              General<br />
              recall{% signalFlag 's1', options %}
            </div>
          </div>
          <div class="mt-2">RRS D2.4 Signal by an Umpire</div>
          <div class="d-flex justify-content-between text-smaller">
            <div style="width: 24%">
              a. No pen.{% signalFlag 'greenwhite', options %}
            </div>
            <div style="width: 24%">
              b. Penalty{% signalFlag 'red', options %}
            </div>
            <div style="width: 24%">
              c. Report{% signalFlag 'blackwhite', options %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

